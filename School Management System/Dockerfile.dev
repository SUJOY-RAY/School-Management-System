FROM mcr.microsoft.com/dotnet/sdk:9.0

# Fix: Use a Linux NuGet package cache instead of Windows fallback paths
ENV NUGET_PACKAGES=/root/.nuget/packages
ENV DOTNET_CLI_HOME=/root

WORKDIR /app

# Copy everything from the project folder into the container
COPY . .

# Clear any existing restore cache (prevents Windows cache conflicts)
RUN rm -rf /root/.nuget/packages/*

# Restore dependencies inside the Linux container
RUN dotnet restore "School-Management-System.csproj"

EXPOSE 8080
EXPOSE 8081

# Run with hot reload
CMD ["dotnet", "watch", "run", "--project", "School-Management-System.csproj", "--urls", "http://0.0.0.0:8080"]
