@{
    ViewData["Title"] = "Welcome";
    if (!User.Identity.IsAuthenticated)
    {
        Layout = null;
    }
}

@if (User.Identity.IsAuthenticated)
{

    <style>
        .full-page-row {
        height: 81vh;
        overflow: visible;
        }

        .col-9 {
        overflow: visible;
        }

        .masonry-grid {
        height: 100%;
        width: 100%;
        overflow: visible;
        columns: 3;
        column-gap: 14px;
        }

        .masonry-grid img {
        width: 100%;
        border-radius: 12px;
        margin-bottom: 14px;
        break-inside: avoid;
        object-fit: cover;
        transition: transform 0.35s cubic-bezier(.175, .885, .32, 1.275), box-shadow 0.35s ease;
        cursor: pointer;
        }

        .masonry-grid img:hover {
        transform: scale(1.1) rotateZ(1.1deg) translateY(-8px);
        box-shadow: 0 25px 45px rgba(0, 0, 0, 0.35);
        z-index: 9999;
        position: relative;
        }

        .masonry-grid img:nth-child(1) {
        height: 450px;
        }

        .masonry-grid img:nth-child(2) {
        height: 150px;
        }

        .masonry-grid img:nth-child(3) {
        height: 150px;
        }

        .masonry-grid img:nth-child(4) {
        height: 450px;
        }

        .masonry-grid img:nth-child(5) {
        height: 610px;
        }

    </style>

    <div class="container-fluid text-center">
        <div class="row full-page-row">
            <div class="d-flex justify-content-center">
                <div class="masonry-grid">
                    @foreach (var img in Model)
                    {
                        <img src="@Url.Content($"~/Static/{(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? "default")}-index-page-grid/{img}")" />
                    }
                </div>
            </div>
        </div>
    </div>

} 
else
{
    ViewData["Title"] = "Welcome";
    <div class="vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="card shadow-lg p-4 rounded-4 text-center" style="max-width: 400px; width: 100%;">
            <div class="card-body">
                <h1 class="card-title mb-3">Welcome to School Management System</h1>
                <p class="card-text mb-4">Please log in with your Google account to access your dashboard and content.</p>

                <a class="btn btn-outline-dark btn-lg w-100 d-flex align-items-center justify-content-center gap-2"
                   asp-controller="Account" asp-action="Login" style="background-color: #fff; border-color: #dadce0;">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"
                         alt="Google Logo" style="width:20px; height:20px;" />
                    <span>Login with Google</span>
                </a>
            </div>
        </div>
    </div>
}