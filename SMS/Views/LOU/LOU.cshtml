@using SMS.Models.user_lists
@model IEnumerable<ListOfUsers>

@{
    ViewData["Title"] = "View All LOU";
}

<h1>@ViewData["Title"]</h1>

<!-- Table -->
<table id="louTable" class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>School</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.SchoolID</td>

                <td class="text-center">
                    <a href="@Url.Action("UpdateLOU", "LOU", new { id = user.Id })" class="btn btn-sm btn-primary">
                        Update
                    </a>

                    <!-- Delete button -->
                    <a href="@Url.Action("DeleteLOU", "LOU", new { id = user.Id })"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this user?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#louTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [5, 10, 25, 50],
                "ordering": true,
                "searching": true,
                "responsive": true,
                "language": {
                    "search": "Search Users:",
                    "lengthMenu": "Show _MENU_ entries"
                }
            });
        });
    </script>
}
