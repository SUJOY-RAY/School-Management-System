@{
    ViewData["Title"] = "Upload List of Users";
}

<h2 class="mb-4">Upload List of Users</h2>

<form asp-action="UploadLOU" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label">Select Excel File (.xlsx)</label>
        <input type="file" class="form-control" name="file" id="file" required />
        <div class="form-text">The file should have columns: Email | ClassroomID(s) separated by commas | Role</div>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>
