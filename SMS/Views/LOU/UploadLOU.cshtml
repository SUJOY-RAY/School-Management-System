@{
    ViewData["Title"] = "Upload List of Users";
}

<h2 class="mb-4">Upload List of Users</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="UploadLOU" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="file" class="form-label">Select Excel File (.xlsx)</label>
        <input type="file" class="form-control" name="file" id="file" required />
        <div class="form-text">The file should have columns: Email | SchoolID | ClassroomID | Role</div>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>
