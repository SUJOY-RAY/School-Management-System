@model IEnumerable<SMS.Models.school_related.Classroom>

@{
    ViewData["Title"] = "Classrooms";
}

<div class="container mt-4">
    <h2 class="mb-4">Classrooms</h2>

    <table id="classTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Classroom ID</th>
                <th>Name</th>
                <th>School ID</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Users", "Classroom", new {id = c.Id})">
                            @c.Id
                        </a>
                    </td>

                    <td>@c.Name</td>

                    <td>@c.SchoolID</td>

                    <td class="text-center">
                        <a href="@Url.Action("UpdateClassroom", "Classroom", new { id = c.Id })" class="btn btn-sm btn-primary">
                            Update
                        </a>

                        <!-- Delete button -->
                        <a href="@Url.Action("DeleteClassroom", "Classroom", new { id = c.Id })"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this classroom?');">
                            Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#classTable').DataTable({
                "pageLength": 10,
                "lengthMenu": [5, 10, 25, 50],
                "ordering": true,
                "searching": true,
                "responsive": true,
                "language": {
                    "search": "Search Classes:",
                    "lengthMenu": "Show _MENU_ entries"
                }
            });
        });
    </script>
}
