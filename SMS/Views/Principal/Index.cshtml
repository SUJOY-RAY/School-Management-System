@model List<(string ImageUrl, string TargetController, string TargetAction)>

<style>
    .masonry-grid {
        columns: 3;
        column-gap: 14px;
        width: 100%;
        margin-top: 20px;
    }

        .masonry-grid img {
            width: 100%;
            border-radius: 12px;
            margin-bottom: 14px;
            break-inside: avoid;
            object-fit: cover;
            cursor: pointer;
            transition: transform 0.35s cubic-bezier(.175,.885,.32,1.275), box-shadow 0.35s ease;
        }

            .masonry-grid img:hover {
                transform: scale(1.05);
                box-shadow: 0 25px 45px rgba(0,0,0,0.35);
                position: relative;
                z-index: 10;
            }

    @@media (max-width: 992px) {
        .masonry-grid {
            columns: 2;
        }
    }

    @@media (max-width: 576px) {
        .masonry-grid {
            columns: 1;
        }
    }

    .masonry-grid a {
        text-decoration: none;
    }

    .masonry-grid img:active {
        transform: scale(1.02);
    }
</style>

<div class="container">
    <div class="masonry-grid">
        @foreach (var item in Model)
        {
            <a asp-controller="@item.TargetController" asp-action="@item.TargetAction">
                <img src="@Url.Content($"~/{item.ImageUrl}")" alt="@item.TargetAction" />
            </a>
        }
    </div>
</div>
