@{
}
@model List<(string ImageName, string TargetController, string TargetAction)>

@{
    ViewData["Title"] = "Principal Dashboard";
}

<style>
    .masonry-grid {
        columns: 3;
        column-gap: 14px;
        width: 100%;
    }

        .masonry-grid img {
            width: 100%;
            border-radius: 12px;
            margin-bottom: 14px;
            break-inside: avoid;
            object-fit: cover;
            cursor: pointer;
            transition: transform 0.35s cubic-bezier(.175,.885,.32,1.275), box-shadow 0.35s ease;
        }

            .masonry-grid img:hover {
                transform: scale(1.05);
                box-shadow: 0 25px 45px rgba(0,0,0,0.35);
                position: relative;
                z-index: 10;
            }
</style>

<div class="container">
    <div class="masonry-grid">
        @foreach (var item in Model)
        {
            <a asp-controller="@item.TargetController" asp-action="@item.TargetAction">
                <img src="~/Static/Principal-index-page-grid/@item.ImageName" alt="@item.ImageName" />
            </a>
        }
    </div>
</div>
