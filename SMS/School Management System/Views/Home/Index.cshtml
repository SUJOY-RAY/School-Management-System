@{
    ViewData["Title"] = "Welcome";
}

<div class="hero-section d-flex align-items-center justify-content-center text-center">
    <div>
        <h1 class="display-3 fw-bold mb-3">School Management System</h1>
        <p class="lead mb-4">A centralized platform for Principals, Teachers, Students, and Administrators.</p>
    </div>
</div>

<section class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded border">
                <h4 class="fw-bold">For Principals</h4>
                <p>Manage school, monitor students and teachers, access performance reports.</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded border">
                <h4 class="fw-bold">For Teachers</h4>
                <p>Mark attendance, manage assignments, upload grades and communicate easily.</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded border">
                <h4 class="fw-bold">For Students</h4>
                <p>Access assignments, view grades, track attendance, stay connected.</p>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        min-height: 75vh;
        background: linear-gradient(135deg, #0d6efd 0%, #2b6cb0 100%);
        color: white;
        padding: 60px 20px;
    }
</style>
